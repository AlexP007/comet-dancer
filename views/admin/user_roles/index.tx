<: cascade components::blocks::container :>

<: around head -> { :>
    <div class="pr-4">
        <: include components::utils::button_link {
             text  => 'New',
             link  => $routes.role_create,
             color => 'primary',
        } :>
    </div>
<: } :>

<: around body -> { :>
    <: include components::tables::table {
       name        => $table.name,
       headings    => $table.headings,
       rows        => $table.rows,
    } :>
<: } :>