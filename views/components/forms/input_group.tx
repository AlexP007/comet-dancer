<div class="pt-1">
    <label class="block font-normal text-gray-400" for="<: $name :>">
        <: $label :>
    </label>
    <: include components::forms::input {
        name         => $name,
        type         => $type,
        value        => $value,
        autocomplete => $autocomplete,
    } :>
    <: include components::forms::error { name => $name } :>
</div>
